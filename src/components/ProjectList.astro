---
import ninImage from "../assets/nin.png";
import hyreImage from "../assets/hyre.png";
import noInvitationImage from "../assets/noinvitation.png";
import wikipendiumImage from "../assets/wikipendium.png";
import featfmImage from "../assets/featfm.png";
import demoliciousImage from "../assets/demolicious.png";

import { Image } from "@astrojs/image/components";

interface Item {
  title: string;
  image: string;
  link: string;
  description: string;
}
const items: Item[] = [
  {
    title: "Hyre",
    image: hyreImage,
    link: "https://hyre.no",
    description: "The world's best car sharing service!",
  },
  {
    title: "No Invitation",
    image: noInvitationImage,
    link: "http://www.pouet.net/prod.php?which=73145",
    description: "Invitation for Revision 2018, won Under Construction 2017.",
  },
  {
    title: "Wikipendium",
    image: wikipendiumImage,
    link: "https://www.wikipendium.no",
    description:
      "Wikipendium is a free and open source wiki for writing summaries of subjects at your local university. Currently the number one open wiki platform at NTNU where it's used by thousands of students.",
  },
  {
    title: "nin",
    image: ninImage,
    link: "https://github.com/ninjadev/nin",
    description: "nin is an in-browser demo tool to create webgl demos. It is used to create most ninjadev demos.",
  },
  {
    title: "Demolicius",
    image: demoliciousImage,
    link: "https://github.com/dmpro2014/report/releases",
    description:
      "Demolicous is a general purpose SIMT inspired computer built from the ground up. The architecture is implemented on an FPGA and a custom built PCB was created.",
  },
  {
    title: "feat.fm",
    image: featfmImage,
    link: "",
    description: "feat.fm brought you live music video streaming from artists all over the world!",
  },
];
---

<h1 class="title mb-6">Some of my projects!</h1>
<div class="columns-2 gap-8">
  {
    items.map((item) => (
      <a href={item.link} target="_blank" rel="noreferrer noopener">
        <div class="mb-16 break-inside-avoid-column rounded-md">
          <Image class="rounded-md" src={item.image} loading="eager" aspectRatio="16:9" />
          <p class="title mt-4">{item.title}</p>
          <p class="mb-4">{item.description}</p>
        </div>
      </a>
    ))
  }
</div>
